{
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "types": [
                "node",
                "mongoose",
                "mocha",
                "chai"
            ]
        }
    },
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "isolatedModules": true,
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "node",
            "mongoose",
            "mocha",
            "chai"
        ]
    },
    "files": [
        "src/global.d.ts",
    ],
    "include": [
        "src/**/*.ts"
    ]
}
